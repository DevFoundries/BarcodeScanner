<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:core="using:Microsoft.Xaml.Interactions.Core"
      x:Class="BarcodeScannerUWP.MainPage"
      mc:Ignorable="d"
      d:DesignWidth="700"
      DataContext="{Binding Main, Source={StaticResource Locator}}" Margin="20">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button FontSize="20" HorizontalAlignment="Center" Margin="10,0" Tapped="UIElement_OnTapped">Scan Barcode</Button>
            <TextBox x:Name="Barcode" Foreground="Black" HorizontalAlignment="Center" Margin="10,0" Width="500" Text="{Binding Barcode,Mode=OneWay}"></TextBox>
            <Button FontSize="20" HorizontalAlignment="Center" Margin="10,0">Copy</Button>
        </StackPanel>
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Hidden">
            <ListView ItemsSource="{Binding BarcodeData}">
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="30" Width="150" Margin="15,0">Header</TextBlock>
                            <TextBlock FontSize="30" Margin="15,0">Description</TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.HeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBox IsReadOnly="True" Text="{Binding Path=Barcode}" Margin="15" Width="150"></TextBox>
                            <TextBox Text="{Binding Path=Description,Mode=TwoWay}" Margin="15" Width="600"></TextBox>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Page>
